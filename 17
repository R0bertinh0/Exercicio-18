//verificar números pares entre dois valores

var num1 = Number(prompt('Digite o primeiro número'))
var num2 = Number(prompt('Digite o segundo número'))

if (num2 > num1) {

    while(num1<= num2) {
        if (num1%2===0){
            console.log(num1);
        }
        num1++;
    }

} else if (num1 > num2) {

    while(num2<= num1) {
        if (num2%2===0){
            console.log(num2);
        }
        num2++;
    
    }
} else {
 console.log('Os números são iguais')
}

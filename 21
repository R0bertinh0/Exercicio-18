//Informe o próximo ano bissexto

var ano = Number(prompt('Digite um ano'));

var anoControle = Infinity;


while(ano < anoControle){

  if (ano % 400 === 0) {
    
    alert(`${ano} é bissexto`);
    break;

  } else if (ano % 4 === 0 && ano % 100 !== 0){

    alert(`${ano} é bissexto`);
    break

  }
  
  ano++;
}
